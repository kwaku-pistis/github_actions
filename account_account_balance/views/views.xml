<odoo>
    <data>
        <record id="account_account_balance_tree" model="ir.ui.view">
            <field name="name">account.account.balance.tree</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_list" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="debit" />
                    <field name="credit" />
                    <field name="balance" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
